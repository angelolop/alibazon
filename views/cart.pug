extends layout.pug
include mixins/_cardsFromCart

block content
    .album.py-4
        .container 
            h3.mb-4 Cart
            table.table
                thead
                    tr
                        th(scope='col') Price
                        th(scope='col') Color
                        th(scope='col') Size
                        th(scope='col') Product ID
                        th(scope='col') Quantity
                        th(scope='col') Delete
                        th(scope='col') Change quantity
                            each purchase in cardsFromCart
                                +cardsFromCart(purchase)