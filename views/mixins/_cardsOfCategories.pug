mixin cardsOfCategories(group)
  .col-md-8
  .container
    .card.mb-4.shadow-sm
      title #{group.page_title} 
      img(src=group.image)
      .card-body
        .card-text #{group.page_description}
        .card-text.mb-2  
        .d-flex.justify-content-between.align-items-center
          .btn-group
            button.btn.btn-sm.btn-outline-secondary
              a(href=group.id) View products